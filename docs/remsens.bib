  file      = {:pdf_library/Wendisch_etal_2007_JGeophysResAtmos_Effects_of_ice_crystal_habitat.pdf:PDF},
  keywords  = {atmospheric radiation, thermal infrared, cirrus optical properties, ice crystal habit, aircraft, model, ice crystal shape},
