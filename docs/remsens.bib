@Article{Tank2002,
  author    = {A. M. G. Klein Tank and J. B. Wijngaard and G. P. K\"{o}nnen and R. B\"{o}hm and G. Demar{\'{e}}e and A. Gocheva and M. Mileta and S. Pashiardis and L. Hejkrlik and C. Kern-Hansen and R. Heino and P. Bessemoulin and G. M\"{u}ller-Westermeier and M. Tzanakou and S. Szalai and T. P{\'{a}}lsd{\'{o}}ttir and D. Fitzgerald and S. Rubin and M. Capaldo and M. Maugeri and A. Leitass and A. Bukantis and R. Aberfeld and A. F. V. van Engelen and E. Forland and M. Mietus and F. Coelho and C. Mares and V. Razuvaev and E. Nieplova and T. Cegnar and J. Antonio L{\'{o}}pez and B. Dahlstr\"{o}m and A. Moberg and W. Kirchhofer and A. Ceylan and O. Pachaliuk and L. V. Alexander and P. Petrovic},
