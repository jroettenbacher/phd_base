	keywords = {Aeolus, biomass burning aerosol, lidar, remote sensing, smoke, wild fires},
	doi = {https://doi.org/10.1029/2020GL092194},
	url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1029/2020GL092194},
