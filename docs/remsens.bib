@Article{Gorodetskaya2015,
  author   = {Gorodetskaya, I. V. and Kneifel, S. and Maahn, M. and Van Tricht, K. and Thiery, W. and Schween, J. H. and Mangold, A. and Crewell, S. and Van Lipzig, N. P. M.},
  journal  = {Cryosphere},
