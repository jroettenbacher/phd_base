@article{Dawson2020,
	author = {Dawson, K. W. and Ferrare, R. A. and Moore, R. H. and Clayton, M. B. and Thorsen, T. J. and Eloranta, E. W.},
	title = {Ambient Aerosol Hygroscopic Growth From Combined Raman Lidar and HSRL},
	journal = {Journal of Geophysical Research: Atmospheres},
	volume = {125},
	number = {7},
	pages = {e2019JD031708},
	keywords = {Aerosol humidification factor, f(RH), hygroscopicity, Raman lidar, HSRL, CHARMS},
	doi = {https://doi.org/10.1029/2019JD031708},
	url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1029/2019JD031708},
	eprint = {https://agupubs.onlinelibrary.wiley.com/doi/pdf/10.1029/2019JD031708},
	note = {e2019JD031708 2019JD031708},
	abstract = {Abstract Lidar retrievals of aerosol extinction and collocated relative humidity (RH) were acquired during the Department of Energy Combined High Spectral Resolution Lidar (HSRL) and Raman Measurement Study campaign in the summer of 2015 at the Southern Great Plains site in northern Oklahoma. Measurements of the hygroscopic properties of aerosols are crucial for accurately representing their relationship with clouds, which can be a significant source of uncertainty in assessing direct and indirect radiative effects. The ability for lidar to retrieve measurements of the vertically resolved f (RH), that is, the aerosol extinction at some wet RH normalized by the aerosol extinction at a dry reference RH, is investigated here and compared with nephelometer-measured f (RH) at the surface. We introduce a modified approach to fitting the lidar measurements of aerosol extinction and our comparisons reveal that lidar and nephelometer measurements of f (RH) are consistent, both with each other and with reported values in the literature. The implications for this work present a path forward for global-scale retrievals of remotely sensed aerosol hygroscopic properties. Most importantly, the efforts in this study could lead to closing the gap on uncertainties associated with the aerosol indirect radiative effect when combined with inversion retrievals of aerosol microphysical properties.},
	year = {2020}
}



@Article{Adam2022,
	AUTHOR = {Adam, Mariana and Fragkos, Konstantinos and Binietoglou, Ioannis and Wang, Dongxiang and Stachlewska, Iwona S. and Belegante, Livio and Nicolae, Victor},
	TITLE = {Towards Early Detection of Tropospheric Aerosol Layers Using Monitoring with Ceilometer, Photometer, and Air Mass Trajectories},
	JOURNAL = {Remote Sensing},
	VOLUME = {14},
	YEAR = {2022},
	NUMBER = {5},
	ARTICLE-NUMBER = {1217},
	URL = {https://www.mdpi.com/2072-4292/14/5/1217},
	ISSN = {2072-4292},
	ABSTRACT = {A near-real-time automatic detection system, based on the synergy of continuous measurements taken by a ceilometer and a photometer, has been implemented in order to detect lofted atmospheric aerosol layers and estimate the aerosol load. When heavy-loaded conditions are detected (defined by a significant deviation of the optical properties from a 10-year climatology), obtained for aerosol layers above 2500 m, an automatic alert is sent to scientists of the Romanian Lidar Network (ROLINET) to further monitor the event. The Hybrid Single-Particle Lagrangian Integrated Trajectory (HYSPLIT) back-trajectory calculations are used to establish the possible pollution source. The aerosol transport events are considered to be major when various optical properties provided by the photometer are found outside the climatological values. The aerosol types over the three years for all the events identified revealed that the contribution to the pollution was 31%, 9%, and 60% from marine, dust, and continental types. Considering only the &lsquo;outside climatology limits&rsquo; events, the respective contribution was 15%, 12%, and 73% for marine, dust, and continental types, respectively.},
	DOI = {10.3390/rs14051217}
}






@article{Goldsmith2016,
	title = {High Spectral Resolution Lidar (HSRL) Instrument Handbook},
	author = {Goldsmith, John},
	abstractNote = {High Spectral Resolution Lidar (HSRL) systems provide vertical profiles of optical depth, backscatter cross-section, depolarization, and backscatter phase function. All HSRL measurements are absolutely calibrated by reference to molecular scattering, which is measured at each point in the lidar profile. Like the Raman lidar but unlike simple backscatter lidars such as the micropulse lidar, the HSRL can measure backscatter cross-sections and optical depths without prior assumptions about the scattering properties of the atmosphere. The depolarization observations also allow robust discrimination between ice and water clouds. In addition, rigorous error estimates can be computed for all measurements. A very narrow, angular field of view reduces multiple scattering contributions. The small field of view, coupled with a narrow optical bandwidth, nearly eliminates noise due to scattered sunlight. There are two operational U.S. Department of Energy (DOE) Atmospheric Radiation Measurement (ARM) Climate Research Facility HSRL systems, one at the Barrow North Slope of Alaska (NSA) site and the other in the second ARM Mobile Facility (AMF2) collection of instrumentation.},
