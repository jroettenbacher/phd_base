@Article{Siebert2010,
  author   = {Holger Siebert and S. Gerashchenko and A. Gylfason and K. Lehmann and L. R. Collins and R. A. Shaw and Z. Warhaft},
  journal  = {Atmos. Res.},
  title    = {Towards understanding the role of turbulence on droplets in clouds: In situ and laboratory measurements},
  year     = {2010},
  issn     = {0169-8095},
  note     = {From the Lab to Models and Global Observations: Hans R. Pruppacher and Cloud Physics},
  number   = {4},
  pages    = {426--437},
  volume   = {97},
  abstract = {The role of turbulence in droplet growth in clouds is controversial, in part because of the difficulty of studying underlying processes in the cloud environment, and in part because of the difficulty of achieving real cloud conditions in controlled laboratory or computational studies. This paper is a synthesis of research on turbulence effects on cloud droplets that includes field and laboratory studies. Results from cloud measurements show that the turbulence exhibits similar internal intermittency to that observed in the laboratory, and in direct numerical simulations. We explore the consequences of this by relating measurements of droplet accelerations in the laboratory, to conditions observed in the clouds. We show that there is a strong likelihood of droplet accelerations in clouds exceeding the acceleration due to gravity. We discuss these observations in terms of the dynamics of droplets, including velocity statistics and clustering, and their influence on droplet growth.},
  doi      = {https://doi.org/10.1016/j.atmosres.2010.05.007},
  keywords = {Cloud dynamics, Turbulence, Intermittency, Droplet acceleration, Collision, Coalescence},
  url      = {http://www.sciencedirect.com/science/article/pii/S0169809510001237},
}

@Article{Minikin2003,
  author   = {Minikin, Andreas and Petzold, Andreas and Str\"om, Johan and Krejci, Radovan and Seifert, Marco and van Velthoven, Peter and Schlager, Hans and Schumann, Ulrich},
  journal  = {Geophys. Res. Lett.},
  title    = {{Aircraft observations of the upper tropospheric fine particle aerosol in the Northern and Southern Hemispheres at midlatitudes}},
