@article{Baars2021,
	author = {Baars, Holger and Radenz, Martin and Floutsi, Athena Augusta and Engelmann, Ronny and Althausen, Dietrich and Heese, Birgit and Ansmann, Albert and Flament, Thomas and Dabas, Alain and Trapon, Dimitri and Reitebuch, Oliver and Bley, Sebastian and Wandinger, Ulla},
	title = {Californian Wildfire Smoke Over Europe: A First Example of the Aerosol Observing Capabilities of Aeolus Compared to Ground-Based Lidar},
	journal = {Geophysical Research Letters},
	volume = {48},
