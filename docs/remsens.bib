@Article{deBoer2018,
  author    = {Gijs de Boer and Mark Ivey and Beat Schmid and Dale Lawrence and Darielle Dexheimer and Fan Mei and John Hubbe and Albert Bendure and Jasper Hardesty and Matthew D. Shupe and Allison McComiskey and Hagen Telg and Carl Schmitt and Sergey Y. Matrosov and Ian Brooks and Jessie Creamean and Amy Solomon and David D. Turner and Christopher Williams and Maximilian Maahn and Brian Argrow and Scott Palo and Charles N. Long and Ru-Shan Gao and James Mather},
  title     = {A Bird's-Eye View: Development of an Operational {ARM} Unmanned Aerial Capability for Atmospheric Research in Arctic Alaska},
  journal   = {Bull. Amer. Meteor. Soc.},
