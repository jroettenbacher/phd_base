  isbn      = {978-3-7315-0686-7},
  issn      = {0179-5619},
  keywords  = {Arktische Mischphasenwolken, Mikrophysikalische Prozesse in Wolken, Oberfl\"{a}cheneinfluss, Wolkenaufl\"{o}sung, Arctic mixed-phase clouds, microphysical processes in clouds, surface heterogeneities, cloud dissipation process},
  language  = {english},
